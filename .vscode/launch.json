{
    "ASP.NET Core Launch": {
        "prefix": "aspnet-launch", // The trigger for the snippet
        "body": [
            "{",
            "    \"version\": \"0.2.0\",",
            "    \"configurations\": [",
            "        {",
            "            \"name\": \".NET: Launch\",",
            "            \"type\": \"coreclr\",",
            "            \"request\": \"launch\",",
            "            \"preLaunchTask\": \"build\",",
            "            \"program\": \"${workspaceFolder}/bin/Debug/${projectName}/${projectName}.dll\",",
            "            \"args\": [],",
            "            \"cwd\": \"${workspaceFolder}\",",
            "            \"stopAtEntry\": false,",
            "            \"serverReadyAction\": {",
            "                \"action\": \"openBrowser\",",
            "                \"debug\": true,",
            "                \"url\": \"https://localhost:7279;http://localhost:5279\" // **CHANGE THIS**",
            "            },",
            "            \"environmentVariables\": {",
            "                \"ASPNETCORE_ENVIRONMENT\": \"Development\"",
            "            },",
            "            \"sourceFileMap\": {",
            "                \"/.NET/Sdk/\": \"${env:DOTNET_SDK_PATH}\"",
            "            },",
            "            \"hotReloadEnabled\": true",
            "        }",
            "    ]",
            "}",
            ""
        ],
        "description": "ASP.NET Core Launch Configuration"
    }
}