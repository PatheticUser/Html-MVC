@model IEnumerable<Neuronix_Labs.Models.Services>
@{
    ViewData["Title"] = "Services";
}

<head>
    <style>
        .container {
            padding-top: 28px;
        }

        .card {
            height: 100%;
            /* Ensures all cards have the same height */
            display: flex;
            flex-direction: column;
        }

        .card-img-top {
            object-fit: cover;
            /* Ensures image fills space properly */
            height: 200px;
            /* Adjust height as needed */
        }

        .card-body {
            flex-grow: 1;
            /* Makes sure content expands properly */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .card-title {
            font-size: 1.25rem;
            /* Ensures uniform title size */
            font-weight: bold;
        }

        .card-text {
            flex-grow: 1;
            /* Ensures text stretches evenly */
        }
    </style>
</head>

<section id="services" class="container">
    <div class="row">
        @foreach (var service in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card service-card">
                    <img src="@service.ImageUrl" class="card-img-top img-fluid" alt="@service.Title">
                    <div class="card-body">
                        <h3 class="card-title">@service.Title</h3>
                        <p class="card-text">@service.Description</p>
                        <a href="@service.Link" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

</html>