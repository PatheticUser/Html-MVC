@model Neuronix_Labs.Models.ViewModels.ArticleViewModel

@{
    ViewData["Title"] = "Articles";
}

<head>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .article-card {
            overflow: hidden;
            transition: transform 0.3s ease-in-out;
        }

        .container {
            padding-top: 15px;
        }

        .article-card:hover {
            transform: scale(1.03);
        }

        .article-title:hover {
            color: #007bff;
        }

        .category {
            font-weight: bold;
            color: #555;
            text-transform: uppercase;
            font-size: 0.9rem;
        }

        .read-more {
            transition: all 0.3s ease-in-out;
        }

        .read-more:hover {
            letter-spacing: 1px;
            color: #0056b3;
        }
    </style>
</head>

<main class="mt-1 pt-1">
    <div class="container">
        <div class="row">
            @foreach (var article in Model.Articles)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card article-card p-3">
                        <span class="category">@article.Category</span>
                        <h4 class="article-title">@article.Title</h4>
                        <p>@article.Description</p>
                        <a href="@Url.Action("Details", "Articles", new { id = article.ArticleId })" class="read-more">Read
                            More</a>
                    </div>
                </div>
            }
        </div>
    </div>
</main>
